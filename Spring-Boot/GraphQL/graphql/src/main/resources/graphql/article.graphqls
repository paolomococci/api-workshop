type Article {
    id: ID!
    title: String!
    text: String!
    category: String
    author: String!
    reviewer: String!
}

type Author {
    id: ID
    name: String!
    surname: String!
    nickname: String
    articles: [Article]
}

type Query {
    recentArticles(count: Int, offset: Int): [Article]!
}
